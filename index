  (function() {
    const root = document.getElementById('icd-site');
    if (!root) return;

    /* ROTATING HERO TERMS */
    const terms = [
      'tribal governments',
      'Native Hawaiian Organizations',
      'Alaska Native Corporations',
      'tribal colleges and universities',
      'Native-led organizations',
      'state-recognized tribes',
      'Alaska Native communities',
      'tribal enterprises',
      'Urban Indian communities'
    ];

    const termSpan = root.querySelector('#rotateTerm');
    let idx = 0;

    if (termSpan) {
      termSpan.textContent = terms[0];
      termSpan.classList.add('fade-in');

      setInterval(() => {
        termSpan.classList.remove('fade-in');
        termSpan.classList.add('fade-out');

        setTimeout(() => {
          idx = (idx + 1) % terms.length;
          termSpan.textContent = terms[idx];
          termSpan.classList.remove('fade-out');
          termSpan.classList.add('fade-in');
        }, 260);
      }, 3600);
    }

    /* SERVICES ACCORDION */
    root.querySelectorAll('.service-header').forEach(header => {
      header.addEventListener('click', () => {
        const item = header.closest('.service-item');
        const isOpen = item.classList.contains('open');

        root.querySelectorAll('.service-item.open').forEach(openItem => {
          openItem.classList.remove('open');
        });

        if (!isOpen) {
          item.classList.add('open');
        }
      });
    });

    /* AUDIENCE TABS */
    const audTabs = root.querySelectorAll('.aud-tab');
    const audPanels = root.querySelectorAll('.aud-panel');

    audTabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const target = tab.dataset.target;
        audTabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
        audPanels.forEach(p => p.classList.remove('active'));
        const panel = root.querySelector('#panel-' + target);
        if (panel) panel.classList.add('active');
      });
    });

    /* ABOUT TABS */
    const aboutTabs = root.querySelectorAll('.about-tab');
    const aboutPanels = root.querySelectorAll('.about-panel');

    aboutTabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const target = tab.dataset.target;
        aboutTabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
        aboutPanels.forEach(p => p.classList.remove('active'));
        const panel = root.querySelector('#panel-' + target);
        if (panel) panel.classList.add('active');
      });
    });

    /* SCROLL REVEAL */
    const revealTargets = root.querySelectorAll('.hero, .section');
    if ('IntersectionObserver' in window) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('reveal-visible');
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.18 });

      revealTargets.forEach(el => {
        el.classList.add('reveal');
        observer.observe(el);
      });
    } else {
      revealTargets.forEach(el => el.classList.add('reveal-visible'));
    }

    /* SCROLL TO TOP BUTTON */
    const scrollBtn = root.querySelector('.scroll-top');
    if (scrollBtn) {
      window.addEventListener('scroll', () => {
        if (window.scrollY > 320) {
          scrollBtn.classList.add('visible');
        } else {
          scrollBtn.classList.remove('visible');
        }
      });

      scrollBtn.addEventListener('click', () => {
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });
    }

  })();
</script>
</body>
</html>
